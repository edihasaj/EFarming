@model EFarming.Models.IrrigationMode

@{
    ViewData["Title"] = "Edit";
}

    <h1>Irrigation Modes</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mode" class="control-label"></label>
                <select asp-for="Mode" asp-items="Html.GetEnumSelectList<EFarming.Models.IrrigationModeEnum>()" class="custom-select">
                    <option selected="selected" value="0" disabled="disabled">Please select</option>
                </select>
                <span asp-validation-for="Mode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FarmZoneId" class="control-label"></label>
                <input asp-for="FarmZoneId" class="form-control" />
                <span asp-validation-for="FarmZoneId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
